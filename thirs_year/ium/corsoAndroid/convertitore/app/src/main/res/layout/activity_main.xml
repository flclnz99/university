<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Spinner
            android:id="@+id/spinner"
            android:entries="@array/array"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_above="@+id/button"
            android:layout_marginBottom="39dp"
            android:layout_toStartOf="@+id/valore"
            android:layout_marginEnd="41dp"/>
    <EditText
            android:id="@+id/valore"
            android:hint="valore da convertire"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="54dp"
            android:layout_above="@+id/button"
            android:layout_marginBottom="38dp"/>
    <Button
            android:id="@+id/button"
            android:text="Converti"
            android:onClick="calcola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="379dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="160dp"
            android:layout_alignParentBottom="true"/>
    <EditText
            android:id="@+id/sterline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="272dp"/>
    <EditText
            android:id="@+id/euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="172dp"/>
    <EditText
            android:id="@+id/dollari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="78dp"/>
    <TextView
            android:text="GBP"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="275dp"
            android:layout_toStartOf="@+id/sterline"
            android:layout_marginEnd="33dp"/>
    <TextView
            android:text="EUR"
            android:layout_width="110dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="170dp"
            android:layout_toStartOf="@+id/euro"
            android:layout_marginEnd="33dp"/>
    <TextView
            android:text="USD"
            android:gravity="center"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_toStartOf="@+id/dollari"
            android:layout_marginEnd="33dp"/>

</RelativeLayout>